<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.example.aademo.widget.InterceptFrameLayout
        android:id="@+id/cover_frame_itercept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/cover_lvitem_lin_under"
            android:layout_width="fill_parent"
            android:layout_height="120dip"
            android:gravity="top"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/headicon" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingRight="7dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/cover_lvitem_tv_title_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="向右"
                        android:textColor="@color/coverlvitem_under_title_name"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/cover_lvitem_tv_title_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="可以"
                        android:textColor="@color/coverlvitem_under_lasttiem"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/cover_lvitem_tv_title_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="滑动"
                        android:textColor="@color/coverlvitem_under_title_name"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/cover_lvitem_tv_title_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="---->"
                        android:textColor="@color/coverlvitem_under_title_money"
                        android:textSize="14dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/cover_lvitem_tv_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:maxLines="2"
                    android:text="2014北京车站轮胎展活动正20站轮胎展活胎展活动正展活动正展活动正展活动正展活动正展活动正"
                    android:textColor="@color/coverlvitem_under_content" />

                <TextView
                    android:id="@+id/cover_lvitem_tv_lasttime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="13分钟前"
                    android:textColor="@color/coverlvitem_under_lasttiem" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/cover_lvitem_rela_projecticon"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2" >

                <ImageView
                    android:id="@+id/cover_lvitem_img_projecticon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/cover_pic" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:background="@android:color/transparent"
            android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/cover_lvitem_lin_up"
                android:layout_width="250dp"
                android:layout_height="90dip"
                android:layout_marginLeft="-100dp"
                android:background="@color/coverlvitem_up_bg" >

                <TextView
                    android:id="@+id/cover_lvitem_tv_haveown"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="CCCC\nEEE"
                    android:textColor="@color/coverlvitem_up_tv"
                    android:textSize="15dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/coverlvitem_up_vline" />

                <TextView
                    android:id="@+id/cover_lvitem_tv_joinpersion"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="AAA"
                    android:textColor="@color/coverlvitem_up_tv"
                    android:textSize="15dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/coverlvitem_up_vline" />

                <TextView
                    android:id="@+id/cover_lvitem_tv_plan"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="BBB\nBBB"
                    android:textColor="@color/coverlvitem_up_tv"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </com.example.aademo.widget.InterceptFrameLayout>

</LinearLayout>